{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./dist",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@screamform/core": ["../core/src/index.ts"],
			"@screamform/core/*": ["../core/src/*"]
		},
		/* 1. Add DOM support (Required for React) */
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"jsx": "react-jsx",
		/* 2. Enable Type Generation for exports */
		"noEmit": false,
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": true,
		/* 3. Paths to core source for dev; use tsconfig.build.json for declaration emit (uses core dist) */
		"composite": true
	},
	"include": ["src/**/*"],
	"exclude": [
		"node_modules",
		"dist",
		"**/*.stories.*",
		"**/*.test.ts",
		"**/*.test.tsx",
		".storybook"
	]
}
