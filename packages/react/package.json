{
	"name": "@screamform/react",
	"version": "0.1.0",
	"type": "module",
	"sideEffects": ["**/global.css"],
	"source": "./src/index.ts",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		},
		"./global.css": "./dist/global.css",
		"./theme.css": "./dist/theme.css"
	},
	"files": ["dist"],
	"scripts": {
		"build": "bun run build:core-deps && vite build && bun run build:types && node scripts/copy-styles.mjs",
		"build:core-deps": "cd ../core && bun run build && cd ../react",
		"build:types": "tsc -p tsconfig.build.json --emitDeclarationOnly",
		"clean": "node scripts/clean-dist.mjs",
		"test": "vitest run",
		"test:watch": "vitest",
		"storybook": "storybook dev -p 6006",
		"storybook:hmr": "storybook dev -p 6006",
		"storybook:poll": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"dependencies": {
		"@legendapp/state": "^3.0.0-beta.43",
		"@radix-ui/react-label": "^2.1.8",
		"@radix-ui/react-slot": "^1.2.4",
		"@screamform/core": "workspace:*",
		"@tailwindcss/vite": "^4.1.18",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"cmdk": "^1.1.1",
		"dompurify": "^3.3.1",
		"lucide-react": "^0.563.0",
		"marked": "^15.0.0",
		"radix-ui": "^1.4.3",
		"react-scan": "^0.4.3",
		"tailwind-merge": "^3.4.0",
		"tailwindcss": "^4.1.18",
		"tw-animate-css": "^1.4.0"
	},
	"devDependencies": {
		"@playwright/test": "^1.58.1",
		"@react-scan/vite-plugin-react-scan": "^0.1.8",
		"@storybook/addon-a11y": "^8.6.15",
		"@storybook/addon-actions": "^8.6.15",
		"@storybook/addon-controls": "^8.6.15",
		"@storybook/addon-docs": "^8.6.15",
		"@storybook/addon-interactions": "^8.6.15",
		"@storybook/react": "^8.6.15",
		"@storybook/react-vite": "^8.6.15",
		"@storybook/test": "^8.6.15",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.2",
		"@testing-library/user-event": "^14.6.1",
		"@types/bun": "latest",
		"@types/react": "^18.0.0",
		"@types/react-dom": "^18.0.0",
		"@vitejs/plugin-react": "^4.3.4",
		"@vitest/browser-playwright": "^4.0.18",
		"@vitest/coverage-v8": "^4.0.18",
		"jsdom": "^28.0.0",
		"playwright": "^1.58.1",
		"storybook": "^8.6.15",
		"typescript": "^5.0.0",
		"vite": "^6.0.11",
		"vitest": "^4.0.18"
	},
	"peerDependencies": {
		"react": "19",
		"react-dom": "19"
	}
}
