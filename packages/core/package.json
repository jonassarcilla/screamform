{
	"name": "@screamform/core",
	"version": "0.1.0",
	"type": "module",
	"sideEffects": false,
	"source": "./src/index.ts",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		}
	},
	"files": ["dist"],
	"scripts": {
		"build:js": "bun build ./src/index.ts --outdir ./dist --sourcemap --minify",
		"build:types": "bunx tsc -p . --emitDeclarationOnly --declaration --outDir dist",
		"clean": "node scripts/clean-dist.mjs",
		"build": "bun run clean && bun run build:js && bun run build:types",
		"dev": "bun build ./src/index.ts --outdir ./dist --watch",
		"test": "bun test --coverage",
		"test:report": "bun test --coverage --coverage-reporter=lcov"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"typescript": "^5.0.0"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	}
}
