{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "organizeImports": {
      "enabled": true
    },
    "linter": {
      "enabled": true,
      "rules": {
        "recommended": true,
        "correctness": {
          "noUnusedVariables": "error",
          "noUnusedImports": "error",
          "useExhaustiveDependencies": "error"
        },
        "suspicious": {
          "noExplicitAny": "error",
          "noConsoleLog": "warn"
        },
        "nursery": {
          "useSortedClasses": {
            "level": "warn",
            "options": {
              "functions": ["clsx", "cva", "tw"]
            }
          }
        }
      }
    },
    "javascript": {
      "formatter": {
        "quoteStyle": "single",
        "jsxQuoteStyle": "double"
      }
    }
}